{
    "env": {
        "browser": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "nbe": true,
        "kite": true
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
         "no-unused-vars": [
             2, 
             {
                 "args": "all",
                 "argsIgnorePattern": "^_"
             }
         ]
    }
}
